<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="144dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="360dp"
        android:layout_height="144dp"
        android:background="@color/colorFon1">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_polis"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="264dp"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/textPolisInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="10sp"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="88dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_str"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:paddingTop="16dp"
                    android:src="@drawable/chevron_right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/colorFon2">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="216dp"
                    android:layout_height="16dp"
                    android:paddingTop="8dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_green" />

                <TextView
                    android:id="@+id/polisDates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_buy"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/time" />
                
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>